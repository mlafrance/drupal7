  $form['flags']['#weight'] = 2;
  $form['settings_perms']['#weight'] = 3;
  $form['settings_appearance']['#weight'] = 4;
  $form['settings_node_types']['#weight'] = 5;
  $form['settings_archive']['#weight'] = 6;
  $form['buttons']['#weight'] = 10;

  foreach ($form['settings_perms']['table']['groups'] as &$group) {
