function middlebury_monster_menus_show_hide_links() {
  global $user;
  profile_load_profile($user);
  $edit = array(
    'profile_new_edit_console' => $user->profile_new_edit_console,
    'profile_show_links_content' => $user->profile_show_links_content,
    'profile_show_links_2' => $user->profile_show_links_2,
    'profile_show_links_4' => $user->profile_show_links_4,
    'profile_show_links_5' => $user->profile_show_links_5,
    'profile_show_links_6' => $user->profile_show_links_6,
    'profile_show_links_7' => $user->profile_show_links_7,
    'profile_show_links_8' => $user->profile_show_links_8,
    'profile_show_links_9' => $user->profile_show_links_9,
  );
  $edit[$_GET['profile']] = $_GET['show'];
  profile_save_profile($edit, $user, "Interface Settings");
}

/**
 * Implementation of hook_preprocess_node().
 */
function middlebury_monster_menus_preprocess_node(&$vars) {
  if (isset($vars['node']->template_files)) {
    $vars['template_files'] = array_merge($vars['template_files'], $vars['node']->template_files);
    unset($vars['node']->template_files);
  }
}

/**
 * Implementation of hook_preprocess_page().
 */
function middlebury_monster_menus_preprocess_page(&$vars) {
  if (!empty($vars['scripts'])) {
    $scripts = drupal_add_js();

    unset($scripts['core']['misc/jquery.js']);
    unset($scripts['core']['misc/tabledrag.js']);
    $vars['scripts'] = drupal_get_js('header', $scripts);

    $version = '1.5.2';
    if ($vars['is_front'] && strpos($_SERVER['HTTP_USER_AGENT'], "MSIE 7.0") !== FALSE) $version = '1.4.2';
    $vars['scripts'] = '<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/' . $version . '/jquery.min.js"></script>' . $vars['scripts'];
  }

  if (in_array('page-mm-settings', $vars['template_files'])) {
    drupal_add_css(drupal_get_path('module', 'middlebury_monster_menus') . '/settings_page.css', 'module', 'all');
    $vars['styles'] = drupal_get_css();
  }
}